import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.io.Reader;
import java.util.Date;

public class StorageBackEnd {

    private static String username, pass, account;
    private static File file = new File("storage.txt");
    
    public static void Store() throws IOException{
        FileWriter writeFile = new FileWriter(file, true);
        PrintWriter printWriter = new PrintWriter(writeFile);
        Reader fileReader = new FileReader("storage.txt");
        try{
            writeFile.write("-U");
            writeFile.write(username + "\n");
            writeFile.write("-P" + pass + "\n");
            writeFile.write("-A" + account + "\n");
            writeFile.close();
        }catch(IOException e){
            
        }   
    }
    
    public static File GetFile(){
        return file;
    }
    
    public static boolean ValidInput(String validUsername, String validPass, String validAccount){
        if(validUsername.length() == 0 || validPass.length() < 8 || validAccount.length() == 0){
            return false;
        }
        Get(validUsername, validPass, validAccount);
        return true;
    }
    
    public static void Get(String storeUsername, String storePass, String storeAccount){
        username = storeUsername;
        pass = storePass;
        account = storeAccount;
    }
    
    public static void Remind(){
        Date date = new Date();
        File remind = new File("remind.txt");
        
    }
}
