
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.control.Label;
import javafx.scene.control.Tab;
import javafx.scene.control.TabPane;
import javafx.scene.layout.GridPane;
import javafx.scene.layout.Pane;


public class PersonalAccount {

    public static TabPane PersonalTabPane = new TabPane(); 
    public static Tab Home = new Tab("Home", new Label("Show Dashboard"));
    public static Tab PassStorage = new Tab("Storage", new Label("Store Passwords"));
    public static Tab Strength = new Tab("Strength", new Label("Strength Estimator")); 
    public static Tab UserAccount = new Tab("Account", new Label("Set Account Details"));
    
     public static Pane PersonalAccountHolder(){ 
     //creates grid pane grid to be returned to window
      GridPane grid = new GridPane();
      grid.setAlignment(Pos.CENTER); 
      grid.setPadding(new Insets(5, 5, 5, 5));
      grid.setHgap(5);
      grid.setVgap(5);
      grid.add(PersonalTabPane,0,5); 
     return grid;
    }
    }
    

    